{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch app",
      "type": "node",
      "request": "launch",
      "args": [
        "src/app.ts"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register/transpile-only",
      ],
      "smartStep": false,
      "cwd": "${workspaceRoot}",
      "protocol": "auto",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "local",
        "NODE_PORT": "9000"
      },
      "sourceMaps": true,
      "console": "internalConsole",
      "outputCapture": "std"
    },
    {
      "name": "Debug unit test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "test",
        "PORT": "9000"
      },
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ]
    },
    {
      "name": "Debug integration test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "test",
        "PORT": "9000"
      },
      "args": [
        "--config",
        "./jest-cover.json",
        "${relativeFile}",
        "--forceExit"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ]
    }
  ]
}
